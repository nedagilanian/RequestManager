@model List<ApplicationRole>
@{
    ViewData["Title"] = "لیست نقش ها";
    Layout = "~/Views/Shared/_NavbarLayout.cshtml";
}
<style>
    th {
        text-align: right;
    }
</style>

<a asp-area="SAdmin" asp-controller="ManageRole" asp-action="AddRole" class="btn btn-primary"  style="width: 200px;">افزودن نقش جدید</a>

@if (!Model.Any())
{
        <h1>نقشی یافت نشد</h1>
}
else
{

        <div class="row" style="padding-top:1%;">
            <div class="col-md-12">

            <table class="table table-responsive talble-hover table-striped">
                 <tr>
                    <th>ردیف</th>
                    <th>نام نقش</th>
                    <th>نام فارسی نقش</th>
                    <th>امکانات </th>
                 </tr>

                      @for (int i = 0; i < Model.Count; i++)
                      {

                              <tr>
                                  <td>@(i+1)</td>
                                  <td>@Model[i].Name</td>
                                  <td>@Model[i].NameFa</td>
                                  <td>
                                    <form asp-area="SAdmin" asp-controller="ManageRole" asp-action="DeleteRole" method="post" asp-route-id="@Model[i].Id">

                                      <a asp-area="SAdmin" asp-controller="ManageRole" asp-action="EditRole" asp-route-id="@Model[i].Id" class="btn btn-primary">ویرایش</a>

                                      <button type="submit" class="btn btn-danger">حذف</button>
                                    </form>
                                  </td>
                              </tr>
                      }
    
            </table>

            </div>
         </div>
}





@section Scripts {

}



