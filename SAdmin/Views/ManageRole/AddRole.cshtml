@model ApplicationRole
@{
    ViewData["Title"] = "افزودن نقش";
    Layout = "~/Views/Shared/_NavbarLayout.cshtml";
}

<form asp-area="SAdmin" asp-controller="ManageRole" asp-action="AddRole" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="col-md-3">
        <div class="form-group">
            <label class="control-label">نام نقش :</label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>  <div class="form-group">
            <label class="control-label">نام فارسی نقش :</label>
            <input class="form-control" asp-for="NameFa" />
            <span asp-validation-for="NameFa" class="text-danger"></span>
        </div>


        <button class="btn btn-primary" type="submit" style="margin-top: 6%;">ثبت</button>
           @if (TempData["back"] != null)
        {
            <a class="btn btn-danger"  href="@TempData["back"]" style="margin-top:6%;width:100px">بازگشت</a>
        }
    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />


}

