@model SetPasswordViewModel
@{
    ViewData["Title"] = "تغییر رمز کاربر";
    Layout = "~/Views/Shared/_NavbarLayout.cshtml";
}


<form asp-area ="SAdmin" asp-controller="ManageUser" asp-action="SetPassword" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert-success" role="alert">@TempData["StatusMessage"].ToString()</div>
    }


      <div class="col-md-4">

        <label asp-for="NewPassword" class="col-md-2 control-label"></label>
    <div class="col-md-10">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <label asp-for="ConfirmNewPassword" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="ConfirmNewPassword" class="form-control" />
        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    </div>



          </div>



    <div class="form-group d-flex justify-content-between mt-4">
        <button class="btn btn-primary" type="submit" style="width: 120px;">ثبت</button>

        @if (TempData["back"] != null)
        {
            <a class="btn btn-danger" href="@TempData["back"]" style="width: 100px;">بازگشت</a>
        }
    </div>

</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}