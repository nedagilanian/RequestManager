@model RegisterViewModel

@{
    ViewData["Title"] = "ثبت کاربر";
    Layout = "~/Views/Shared/_NavbarLayout.cshtml";
}

<div>
    <form asp-area="SAdmin" asp-controller="ManageUser" asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        @if (TempData["StatusMessage"] != null)
        {
            <div alert alert-success" role="alert">@TempData["StatusMessage"]?.ToString()</div>
        }

        <div class="col-md-3">
            <div class="row">
           <label asp-for="FirstName" class="control-label"></label>
            </div>
 
            <div class="row">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="row"><label asp-for="LastName" class="control-label"></label></div>
            <div class="row">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="row"><label asp-for="NationalCode" class="control-label"></label></div>
            <div class="row">
                <input asp-for="NationalCode" class="form-control" />
                <span asp-validation-for="NationalCode" class="text-danger"></span>
            </div>
            <div class="row"><label asp-for="PhoneNumber" class="control-label"></label></div>
            
            <div class="row">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="row"><label asp-for="UserName" class="control-label"></label></div>
            
            <div class="row">
                <input asp-for="UserName" class="form-control" autocomplete="off" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="row"><label asp-for="Email" class="control-label"></label></div>
            <div class="row">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row"><label asp-for="Password" class="control-label"></label></div>
            <div class="row">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="row"><label asp-for="ConfirmPassword" class="control-label"></label></div>
            
            <div class="row">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="margin-top: 6%;">ثبت نام</button>
        @if (TempData["back"] != null)
        {
            <a class="btn btn-danger"  href="@TempData["back"]" style="margin-top:6%;width:100px">بازگشت</a>
        }
            </div>

        </div>
    </form>
</div>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

